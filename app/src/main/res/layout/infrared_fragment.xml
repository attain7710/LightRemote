<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/infrared_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="?attr/actionBarSize"
  tools:context=".ui.infrared.infrared">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="30dp">

      <!--Row 1-->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/circle_button_gap"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />
      </LinearLayout>

      <!--Row 2-->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/circle_button_gap"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/circle_button_gap"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />
      </LinearLayout>

      <!--Row 3-->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/circle_button_gap"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/infrared_button_func6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/circle_button_gap"
          android:scaleType="center"
          android:backgroundTintMode="src_over"
          app:backgroundTint="@color/infrared_button_background"
          app:fabCustomSize="@dimen/circle_button"
          app:maxImageSize="56dp"
          app:borderWidth="0dp"
          app:elevation="0dp" />
      </LinearLayout>

    </LinearLayout>

</FrameLayout>